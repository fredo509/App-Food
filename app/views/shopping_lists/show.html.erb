<h1 class="text-center">Shopping List</h1>

<br>

<div>
  <div>
    <h3>Amount of food to buy: <%= @inventory_food.length %></h3>
    <h3>Total value of food needed: <%= @total_price %></h3>
  </div>

  <div>
    <h3>Recipe: <%= link_to @recipe.name, @recipe%></h3>
    <h3>Inventory: <%= link_to @inventory.name, @inventory%></h3>
  </div>
</div>

<table>
  <thead>
  <tr>
    <th>Food</th>
    <th>Quantity</th>
    <th>Price</th>
  </tr>
  </thead>
  <tbody>
  <% @inventory_food.each do |ingredient| %>
  <tr>
    <td><%= ingredient.food.name %></td>
    <td><%= ingredient.quantity %></td>
    <td>$ <%= ingredient.food.price * ingredient.quantity %></td>
  </tr>
  <% end %>
  </tbody>
</table>