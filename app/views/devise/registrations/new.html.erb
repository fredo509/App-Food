<div class="user-form">
  <div class="user-form-cont">
    <h2 class="user-form-title">Sign up</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.hidden_field :role, value: "user" %>
      
      <div class="field">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", maxlength: 16, placeholder: "full name", class: "form-input", required: true %>
      </div>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "form-input" %>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "password", class: "form-input" %> </br>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "confirm password", class: "form-input" %>
      </div>
      <div class="actions">
        <%= f.submit "Sign up", class: "submit-btn" %>
      </div>
    <% end %>
<div class="shared-links">
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
