<div class="user-form">
  <div class="user-form-cont">
    <h2 class="user-form-title">Edit Ingredient</h2>
    <%= form_with(class:"forms", model: @recipe_food, url: user_recipe_recipe_food_path(current_user, @recipe.id, @recipe_food), local: true, method: :patch) do |form| %>
      <div class="field">
        <div>
          <%= form.label :quantity %>
          <%= form.text_field :quantity, rows: 4, placeholder: "Quantity", class: "form-input", required: true %>
        </div>
        <div>
          <%= form.label :food_id %>
          <%= form.collection_select(:food_id, Food.all, :id, :name, { include_blank: "Select ingredient" }, { class: "form-input", required: true }) %>
        </div>
      </div>
      <%= form.submit 'Update Ingredient', class: "submit-btn" %>
      <%= link_to "Go back", :back, class: 'shared-link go-back' %>
    <% end %>
  </div>
</div>
